{
  "name": "@zeainc/zea-web-components",
  "version": "0.0.40",
  "description": "Zea's web components library",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZeaInc/zea-web-components.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/zea-web-components/zea-web-components.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm-run-all clean build:stencil build:storybook post:build",
    "start": "npm-run-all --parallel stencil storybook",
    "test": "cross-env STENCIL_ENV=dev stencil test --spec --e2e",
    "test.watch": "cross-env STENCIL_ENV=dev stencil test --spec --e2e --watchAll",
    "generate": "plop",
    "storybook": "start-storybook --ci -p 6007 -s ./stencil-utilities/public-assets",
    "clean": "del-cli dist storybook-static",
    "build:stencil": "cross-env STENCIL_ENV=prod stencil build --docs",
    "build:watch": "cross-env STENCIL_ENV=dev stencil build --watch",
    "build:storybook": "build-storybook",
    "stencil": "cross-env STENCIL_ENV=dev stencil build --dev --watch --serve --docs",
    "prepare": "yarn run build",
    "prestart": "yarn run build:stencil",
    "post:build": "node ./stencil-utilities/post-build.js",
    "lint": "eslint 'src/**'",
    "to-cleanup": "rm -Rf dist/ www/ loader/ .stencil/ node_modules/",
    "to-link-packages": "yarn link @zeainc/zea-collab @zeainc/drive-lib @zeainc/zea-engine @zeainc/zea-ux"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@ionic/core": "^5.0.7",
    "@stencil/core": "^1.12.3",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/html": "^5.3.18",
    "@types/ace": "0.0.43",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/puppeteer": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-loader": "^8.1.0",
    "chalk": "^4.0.0",
    "cross-env": "^7.0.2",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "fs-extra": "^9.0.0",
    "jest": "^26.0.1",
    "jest-cli": "^26.0.1",
    "lodash.kebabcase": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "plop": "^2.6.0",
    "prettier": "^2.0.4",
    "puppeteer": "^3.0.2",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "socket.io-client": "^2.3.0",
    "socketio-wildcard": "^2.0.0",
    "typescript": "^3.8.3"
  },
  "license": "ISC",
  "dependencies": {
    "@jaames/iro": "^5.1.5",
    "@juggle/resize-observer": "^3.1.3",
    "@types/ramda": "^0.27.3",
    "@zeainc/drive-lib": "^1.1.0",
    "@zeainc/zea-collab": "^2.0.0",
    "@zeainc/zea-engine": "^1.0.7",
    "@zeainc/zea-ux": "^1.2.9",
    "brace": "^0.11.1",
    "ionicons": "^5.0.1",
    "js-yaml": "^3.13.1",
    "pouchdb-browser": "^7.2.1",
    "pouchdb-find": "^7.2.1",
    "qrcode": "^1.4.4",
    "ramda": "^0.27.0",
    "remarkable": "^2.0.0"
  },
  "stencil": {
    "protocol": "http",
    "host": "localhost",
    "port": 3333,
    "buildDir": "build"
  }
}
